{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "jest": "^26.4.0",
    "jshint": "^2.11.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run build && npm start",
    "ignore": [
      "node_modules",
      "dist"
    ],
    "watch": "src/**/*"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "scripts": {
    "server": "node .",
    "start": "node .",
    "dev": "nodemon --exec babel-node ./src/index.js --presets=@babel/preset-env ",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "pretranspile": "npm run clean",
    "transpile": "babel ./src --out-dir=dist --presets=@babel/preset-env --ignore='node_modules/**/*','dist/**/*','test/**/*' --copy-files --no-copy-ignored --source-maps",
    "build": "npm run transpile"
  }
}
